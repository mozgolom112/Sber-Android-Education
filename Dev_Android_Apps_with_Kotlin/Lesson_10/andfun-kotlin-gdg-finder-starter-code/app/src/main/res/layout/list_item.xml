<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/constlItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imgvGdg"
                android:layout_width="50dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/ic_gdg"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="TODO"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/txtvChapterName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/imgvGdg"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="GDG Mountain View is really long so it will wrap in tools"
                android:textAppearance="?textAppearanceHeadline6"
                android:gravity="center_vertical"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="@+id/imgvGdg"
                app:layout_constraintTop_toTopOf="@+id/imgvGdg"/>
</androidx.constraintlayout.widget.ConstraintLayout>

